<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="flucava.context.register"
           path="/instance-manager/request-context/context/{uuid}"
           methods="PUT"
           controller="Flucava\RequestContextBundle\Controller\ContextController::registerContext"
    />

    <route id="flucava.context.remove"
           path="/instance-manager/request-context/context/{uuid}"
           methods="DELETE"
           controller="Flucava\RequestContextBundle\Controller\ContextController::removeContext"
    />

    <route id="flucava.uri.add"
           path="/instance-manager/request-context/uri/{uri}"
           methods="PUT"
           controller="Flucava\RequestContextBundle\Controller\UriController::addUri"
    />

    <route id="flucava.uri.remove"
           path="/instance-manager/request-context/uri/{uri}"
           methods="DELETE"
           controller="Flucava\RequestContextBundle\Controller\UriController::removeUri"
    />
</routes>
